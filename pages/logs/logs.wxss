.list_item .list_item_date {
  width: 500rpx;
  font-size: 30rpx;
  text-align: left;
}
.list_item .list_item_cate {
  width: 200rpx;
  font-size: 30rpx;
  text-align: center;
}
.list_item .list_item_time {
  width: 200rpx;
  font-size: 30rpx;
  text-align: center;
}