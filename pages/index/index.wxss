/**index.wxss**/
page {
    /* overflow: hidden; */
    /* background: #E7624F; */
  }
  /* part1 */
 .slider { /* /滑动条 */
    width: 650rpx;
    margin: 40rpx auto;
  }
  /* part2 */
  .task_text {
    height: 180rpx;
    margin: 40rpx auto;
    text-align: center;
  }
  .task_text .task_title {
    font-size: 35rpx;
    height: 70rpx;
    line-height: 70rpx;
  }
  .task_text .task_desc {
    font-size: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #b3aaaa;
  }
  /* part3 */
  .task_cate {
    width: 660rpx;
    margin:  auto;
    display: flex;
    flex-wrap: wrap;
  }
  .task_cate .cate_item {
    width: 220rpx;
    height: 150rpx;
    text-align: center;
    margin-bottom: 50rpx;
  }
  .task_cate .cate_item .cate_icon {
    height: 70rpx;
  }
  .task_cate .cate_item .cate_icon image {
    width: 50rpx;
    height: 50rpx;
  }
  .task_cate .cate_item .cate_text {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
  }
  .task_cate .cate_item .cate_text_active {
    color: #a01f5f;
  }
  /* part4 */
  /* start button */
  .start {
    width: 280rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    text-decoration:antiquewhite ;
    margin: 80rpx auto;
    border: 5rpx solid #a01f5f;
    color: #a01f5f;
    border-radius: 560rpx;
  }
  /* clock */
  .clock {
    overflow: hidden;
    background: #a01f5f;
  }
  .progress {
    width: 400rpx;
    height: 400rpx;
    /* background: orange; */
    margin: 140rpx auto;
    position:relative;
  }
  /* 进度条 */
  .progress .progress_bg,.progress .progress_active {
    position: absolute;
    left: 0;
    top: 0;
    width: 400rpx;
    height: 400rpx;
  }
  /* //计时器 */
  .progress .progress_text {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 35rpx;
    color: #ffffff;
    text-align: center;
    position: absolute;
    left: 120rpx;
    top: 170rpx;
  }
  /* 暂停键 */
  .btns .okBtn,.btns .pauseBtn,.btns .continueBtn,.btns .cancleBtn {
    width: 280rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ffffff;
    border: 3rpx solid #ffffff;
    border-radius: 20rpx;
    margin: 0 auto 20rpx auto;
  }